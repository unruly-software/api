{
  "name": "@unruly-software/api",
  "packageManager": "yarn@3.5.0",
  "version": "0.0.0",
  "license": "MIT",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "scripts": {
    "build": "yarn workspaces foreach -t run build",
    "clean": "yarn workspaces foreach -t run clean",
    "test": "yarn workspaces foreach -pt run test",
    "version": "changeset version",
    "release": "CI=true yarn --mode=update-lockfile && yarn build && CI=true yarn test && changeset publish",
    "lint": "biome check",
    "lint:fix": "biome check --write",
    "ci": "CI=true yarn build && CI=true yarn test && yarn lint && tsc --noEmit"
  },
  "peerDependencies": {
    "zod": "^4.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "2.2.0",
    "@changesets/changelog-github": "^0.4.8",
    "@changesets/cli": "^2.26.2",
    "@vitest/coverage-istanbul": "^0.32.2",
    "typescript": "5.0.4",
    "zod": "^4.0.0"
  }
}
